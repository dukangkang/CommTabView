<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/comm_tab_nav_left"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/iv_navagation_scroll_left"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/comm_tab_nav_right"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/iv_navagation_scroll_right"
        android:visibility="visible"/>

    <HorizontalScrollView
        android:id="@+id/comm_tab_hslv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/comm_tab_nav_right"
        android:layout_toRightOf="@+id/comm_tab_nav_left"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:id="@+id/comm_tab_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"/>

            <ImageView
                android:id="@+id/comm_tab_indicator"
                android:layout_width="1dp"
                android:layout_height="2dp"
                android:background="@color/color3097fd"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </HorizontalScrollView>
</RelativeLayout>